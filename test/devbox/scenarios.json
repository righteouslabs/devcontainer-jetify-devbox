{
    "test_with_existing_config": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "devbox": {}
        },
        "mounts": [
            "source=${PWD}/test/devbox,target=/tmp/devbox,type=bind"
        ],
        "postCreateCommand": "cp /tmp/devbox/devbox.json . && devbox update"
    },
    "test_vscode_integration": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "devbox": {
                "packages": "python@3.11,nodejs@18"
            }
        },
        "customizations": {
            "vscode": {
                "settings": {
                    "terminal.integrated.defaultProfile.linux": "bash"
                }
            }
        }
    },
    "test_multiple_base_images": {
        "image": "ubuntu:jammy",
        "features": {
            "devbox": {}
        }
    }
}